<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Liên hệ sử dụng dịch vụ</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="service">Dịch vụ</label>
                    <select id="service" class="form-control">
                        <option style="font-weight: bold">
                            THANH TOÁN
                        </option>
                        <option>
                            &nbsp;&nbsp;Thẻ quốc tế
                        </option>
                        <option>
                            &nbsp;&nbsp;Thẻ ATM nội địa
                        </option>
                        <option>
                            &nbsp;&nbsp;Internet Banking
                        </option>
                        <option>
                            &nbsp;&nbsp;QR Code
                        </option>
                        <option style="font-weight: bold">
                            CHI HỘ
                        </option>
                        <option>
                            &nbsp;&nbsp;Chi về tài khoản ngân hàng
                        </option>
                        <option>
                            &nbsp;&nbsp;Chi về thẻ nội địa
                        </option>
                        <option>
                            &nbsp;&nbsp;Chi tiền mặt tại quầy
                        </option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="email" style="color: #c72828;">*</label>
                    <input type="email" class="form-control" id="email" placeholder="Nhập email">
                </div>
                <div class="form-group">
                    <label for="phone" style="color: #c72828;">*</label>
                    <input type="text" class="form-control" id="phone" placeholder="Nhập số điện thoại">
                </div>
                <div class="form-group">
                    <label for="name" style="color: #c72828;">*</label>
                    <input type="text" class="form-control" id="name" placeholder="Họ và tên">
                </div>
                <div class="form-group">
                    <label for="content" style="color: #c72828;">*</label>
                    <textarea type="text" class="form-control" id="content" placeholder="Nội dung"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-xs-12 col-md-12 col-sm-12 col-lg-12">
                        <button type="button" class="btn btn-danger" data-dismiss="modal" style="width: 100%;">Gửi thông tin</button>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-xs-12 col-md-12 col-sm-12 col-lg-12">
